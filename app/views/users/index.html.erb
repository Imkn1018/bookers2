<h2></h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table>
  <tbody>
   <tr>
     <th>name</th>
     <th><%= @user.name %></th>
   </tr>
   <tr>
     <th>introduction</th>
     <th><%= @user.introduction %></th>
   </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to "Edit", edit_user_path(@user) %>
  <h2>New Book</h2>
</div>


<%= form_with model: @book, local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

