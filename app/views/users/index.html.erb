<% if @book.errors.any? %>
    <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
    <% @book.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
    <% end %>
  <% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
     <table class="table">
  		<tr><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

  		<tr>
  			<th>name</th>
  			<th><%= @user.name %></th>
  		</tr>

  		<tr>
  			<th>introduction</th>
  			<th><%= @user.introduction %></th>
  		</tr>
    </table>

    <div class="row">
    	<%= link_to 'edit',edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench " %>
    	<h2 class="mt-3">New Book</h2>
  　</div>
  　
    <%= form_with model:@book, local:true do |f| %>
    <div class="error_form">
        <label>Title</label>
        <div class="error_field"><%= f.text_field :title %></div>
    </div>
    <div class="error_form">
        <label>Body</label>
        <div class="error_field"><%= f.text_area :body %></div>
    </div>
    <%= f.submit "Create Book" %>
    <% end  %>
   </div>
  



  <!----Users index-->
  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
   <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @users.each do |user| %>
        <td></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td><%= link_to "Show" ,user_path(user) %></td>
        <% end %>
      </tr>

    </tbody>
  </table>
  </div>
  </div>
</div>
