<% if @user.errors.any? %>
    <div class="error_modal">
      <h2><%= @user.errors.count %>error prohibited this book from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
        <% end %>
      </ul>
    </div>
<% end  %>

<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName"%>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <label for="inputName">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputName"%>
  <%= f.submit "Update User" %>
<% end %>